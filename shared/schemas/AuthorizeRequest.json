{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "AuthorizeRequest",
    "type": "object",
    "required": [
        "tenant_id",
        "actor",
        "action",
        "resource",
        "purpose",
        "context"
    ],
    "properties": {
        "tenant_id": {
            "type": "string"
        },
        "actor": {
            "type": "object",
            "required": [
                "actor_id",
                "actor_type",
                "roles",
                "department_id"
            ],
            "properties": {
                "actor_id": {
                    "type": "string"
                },
                "actor_type": {
                    "type": "string"
                },
                "roles": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "department_id": {
                    "type": "string"
                }
            }
        },
        "action": {
            "type": "string",
            "description": "e.g., document.read, rag.search, tool.invoke, agent.invoke, workflow.start, approval.decide"
        },
        "resource": {
            "type": "object",
            "required": [
                "type",
                "id"
            ],
            "properties": {
                "type": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "labels": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "owner_department_id": {
                    "type": "string"
                },
                "jurisdiction": {
                    "type": "string"
                },
                "sensitivity": {
                    "type": "string"
                }
            },
            "additionalProperties": true
        },
        "purpose": {
            "type": "string"
        },
        "context": {
            "type": "object",
            "properties": {
                "ip": {
                    "type": "string"
                },
                "channel": {
                    "type": "string"
                },
                "time": {
                    "type": "string",
                    "format": "date-time"
                },
                "justification": {
                    "type": "string"
                },
                "case_id": {
                    "type": "string"
                },
                "workflow_id": {
                    "type": "string"
                },
                "agent_invocation_id": {
                    "type": "string"
                }
            }
        }
    }
}