{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://nitiops.com/schemas/tool_invocation",
    "title": "ToolInvocation",
    "description": "Record of a specific tool execution",
    "type": "object",
    "properties": {
        "invocation_id": {
            "type": "string",
            "format": "uuid"
        },
        "tool_id": {
            "type": "string",
            "format": "uuid"
        },
        "tenant_id": {
            "type": "string"
        },
        "actor": {
            "type": "object",
            "properties": {
                "user_id": {
                    "type": "string"
                },
                "role": {
                    "type": "string"
                }
            }
        },
        "purpose": {
            "type": "string"
        },
        "input": {
            "type": "object",
            "description": "JSON input for the tool execution, may be redacted"
        },
        "output": {
            "type": "object",
            "description": "JSON output from the tool execution, may be redacted",
            "nullable": true
        },
        "status": {
            "type": "string",
            "enum": [
                "started",
                "success",
                "failed",
                "denied"
            ]
        },
        "started_at": {
            "type": "string",
            "format": "date-time"
        },
        "completed_at": {
            "type": "string",
            "format": "date-time",
            "nullable": true
        },
        "error_code": {
            "type": "string",
            "nullable": true
        },
        "error_message": {
            "type": "string",
            "nullable": true
        }
    },
    "required": [
        "invocation_id",
        "tool_id",
        "tenant_id",
        "actor",
        "purpose",
        "input",
        "status",
        "started_at"
    ],
    "additionalProperties": false
}