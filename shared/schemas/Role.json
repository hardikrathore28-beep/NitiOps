{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://nitiops.com/schemas/role",
    "title": "Role",
    "description": "Definition of permissions and access levels",
    "type": "object",
    "properties": {
        "id": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "permissions": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "required": [
        "id",
        "name",
        "permissions"
    ],
    "additionalProperties": false
}