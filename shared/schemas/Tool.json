{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://nitiops.com/schemas/tool",
    "title": "Tool",
    "description": "Definition of an executable capability",
    "type": "object",
    "properties": {
        "tool_id": {
            "type": "string",
            "format": "uuid"
        },
        "tenant_id": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "adapter_type": {
            "type": "string",
            "enum": [
                "rest",
                "soap",
                "custom"
            ]
        },
        "input_schema": {
            "type": "object",
            "description": "JSON Schema for the tool inputs"
        },
        "output_schema": {
            "type": "object",
            "description": "JSON Schema for the tool outputs"
        },
        "sensitivity": {
            "type": "string",
            "enum": [
                "low",
                "medium",
                "high"
            ]
        },
        "allowed_purposes": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "labels": {
            "type": "object",
            "properties": {
                "system": {
                    "type": "string"
                },
                "domain": {
                    "type": "string"
                },
                "department_id": {
                    "type": "string"
                },
                "jurisdiction": {
                    "type": "string"
                }
            }
        },
        "config": {
            "type": "object",
            "properties": {
                "base_url": {
                    "type": "string"
                },
                "auth_type": {
                    "type": "string"
                },
                "headers": {
                    "type": "object"
                },
                "soap_wsdl_url": {
                    "type": "string"
                },
                "operation": {
                    "type": "string"
                }
            },
            "required": [
                "base_url",
                "auth_type"
            ]
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        },
        "updated_at": {
            "type": "string",
            "format": "date-time"
        }
    },
    "required": [
        "tool_id",
        "tenant_id",
        "name",
        "adapter_type",
        "input_schema",
        "output_schema",
        "sensitivity",
        "allowed_purposes",
        "created_at",
        "updated_at"
    ],
    "additionalProperties": false
}