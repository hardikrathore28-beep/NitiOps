{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://nitiops.com/schemas/department",
    "title": "Department",
    "description": "A functional unit within a Tenant",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid"
        },
        "tenant_id": {
            "type": "string",
            "format": "uuid"
        },
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        }
    },
    "required": [
        "id",
        "tenant_id",
        "name"
    ],
    "additionalProperties": false
}